{
  "name": "poke-quest",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android:clean": "cd android && ./gradlew clean",
    "android:bundle": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "android:build-debug-apk": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleDebug",
    "android:generate-google-services-json": "node scripts/generateGoogleServicesJson.js",
    "ios": "react-native run-ios",
    "ios:generate-google-services-plist": "node scripts/generateGoogleServicesInfoPlist.js",
    "ios:pod-install": "cd ios && pod install --verbose",
    "lint": "eslint .",
    "start": "react-native start",
    "start-clear": "npm start -- --reset-cache",
    "postinstall": "npm run android:generate-google-services-json && if [[ $(uname) == 'Darwin' ]]; then npm run ios:pod-install && npm run ios:generate-google-services-plist; fi",
    "lint-fix": "eslint . --fix",
    "kill": "watchman watch-del-all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --collectCoverage --coverageDirectory=\"./coverage\" && open ./coverage/index.html"
  },
  "dependencies": {
    "@notifee/react-native": "^7.8.2",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/netinfo": "^11.3.1",
    "@react-native-firebase/analytics": "^18.8.0",
    "@react-native-firebase/app": "^18.8.0",
    "@react-native-firebase/crashlytics": "^18.8.0",
    "@react-native-firebase/firestore": "^18.8.0",
    "@react-native-firebase/perf": "^18.8.0",
    "@react-native-firebase/remote-config": "^18.8.0",
    "@react-native-firebase/storage": "^18.8.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/stack": "^6.3.20",
    "@shopify/flash-list": "^1.6.3",
    "@tanstack/react-query": "^5.17.9",
    "axios": "^1.6.5",
    "query-string": "^8.1.0",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-dotenv": "^3.4.9",
    "react-native-exit-app": "^2.0.0",
    "react-native-fast-image": "^8.6.3",
    "react-native-gesture-handler": "^2.15.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-pager-view": "^6.2.3",
    "react-native-progress": "^5.0.1",
    "react-native-reanimated": "^3.7.1",
    "react-native-reanimated-carousel": "^3.5.1",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-shimmer-placeholder": "^2.0.9",
    "react-native-sound": "^0.11.2",
    "react-native-splash-screen": "^3.3.0",
    "react-native-svg": "^14.1.0",
    "react-native-svg-transformer": "^1.3.0",
    "react-native-tab-view": "^3.5.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.20.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@react-native/babel-preset": "0.73.19",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.3",
    "@react-native/typescript-config": "0.73.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "base-64": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "mkdirp": "^3.0.1",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --fix"
    ]
  }
}
